        };

        const pathname = window.location.pathname;
        if (pathname in paths) {
            localStorage.setItem('ref', paths[pathname]);
        } else if (pathname.startsWith('/sendReviews/')) {
            localStorage.setItem('ref', 'refSendReviews');
        }
    }

    allPaths();
