    .get{
        display: flex;
        flex-wrap: wrap;
        position: absolute;
        top: 1%;
        right: 10%;
    }
    li{
        margin: 20px 10px;
        list-style-type: none;
    }
    .ha{
        text-decoration: none;
        color: #fff;
    }
    .ha:hover{
        color: #a2a8d3;
    }
    #account{
        color: #fff;
        cursor: pointer;
        margin-left: 50px;
    }
    #account:hover{
        color: #a2a8d3;
    }
    a{
        text-decoration: none;
    }
    #account-img{
        border-radius: 50%;
        width: 50px;
        height: 50px;
        margin-top: 5px;
        cursor: pointer;
    }
    @media (max-width: 900px) {
        .ha{
            display: none;
        }
        .logo{
            display: none;
        }
        #account{
            display: flex;
        }
    }
</style>
