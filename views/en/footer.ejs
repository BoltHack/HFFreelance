<style>
    .line {
        border-top: 1px solid #f4f2f8;
        position: relative;
        /*margin-left: 200px;*/
        margin-left: 0;
        margin-top: 50px;
        margin-bottom: 50px;
        /*width: 72%;*/
        width: 100%;
    }
    footer {
        /*background: rgb(32,30,32);*/
        /*background: linear-gradient(184deg, rgba(32,30,32,1) 54%, rgba(16,16,17,1) 76%);*/
        background-image: url("../images/programming.jpg");
        background-repeat: no-repeat;
        color: white;
        padding: 20px 0;
        width: 100%;
        margin-bottom: auto;
        position: relative;
        left: 0;
        bottom: 0;
    }

    footer a {
        color: white;
        text-decoration: none;
    }
    footer a:hover {
        color: #F2F2F2;
        text-decoration: underline;
    }
    footer p {
        color: #F2F2F2;
    }
    .footer-links {
        display: flex;
        margin: 20px 200px;
    }
    .footer-our-company {
        width: 350px;
        flex-wrap: wrap;
    }
    .footer-info {
        display: grid;
        gap: 10px;
        margin-left: 50px;
    }
    .footer-contacts {
        display: grid;
        gap: 10px;
        margin-left: 50px;
    }
    .footer-links a {
        margin-right: 20px;
    }

    .footer-links a:last-child {
        margin-right: 0;
    }
    .company-logo {
        width: 30px;
        height: 30px;
    }
    .company-name {
        margin-left: 200px;
        color: white;
    }
</style>

<footer id="footerSection">
    <div class="footer-container">
        <div class="footer-links">
            <div class="footer-our-company">
                <div style="display: flex">
                    <img src="../images/logo2.png" class="company-logo">
                    <h3 style="margin: 5px 10px;">HFFreelance</h3>
                </div>
                <p>Creating modern websites to generate new income sources, change careers, or advance professionally.</p>
            </div>
            <div class="footer-info">
                <h3>Information</h3>
                <a href="/aboutUs">About Us</a>
                <a href="/rules">Terms of Use</a>
                <a href="/privacyPolicy">Privacy Policy</a>
            </div>
            <div class="footer-contacts">
                <% if (links) { %>
                    <% links.forEach(linksItem => { %>
                        <h3>Contacts</h3>
                        <% if(linksItem.vk) {%>
                            <a href="<%= linksItem.vk %>" target="_blank">VK</a>
                        <%}%>
                        <% if(linksItem.discord) {%>
                            <a href="<%= linksItem.discord %>" target="_blank">Discord</a>
                        <%}%>
                        <% if(linksItem.instagram) {%>
                            <a href="<%= linksItem.instagram %>" target="_blank">Instagram</a>
                        <%}%>
                        <% if(linksItem.facebook) {%>
                            <a href="<%= linksItem.facebook %>" target="_blank">Facebook</a>
                        <%}%>
                    <% }); %>
                <%}%>
            </div>
        </div>
        <div class="line"></div>
        <p class="company-name">&copy; 2024 HFFreelance. All rights reserved. Full or partial copying of the site is prohibited .</p>
    </div>
</footer>
<script>
    if (window.location.pathname === '/readyMadeSites' || window.location.pathname === '/readyMadeSites/htmlCssJs' || window.location.pathname === '/readyMadeSites/javascript' || window.location.pathname === '/readyMadeSites/nodeJs' || window.location.pathname === '/readyMadeSites/reactJs' || window.location.pathname === '/readyMadeSites/fullstack'){
        const footerMargin = document.querySelector('.footer-our-company');
        footerMargin.style.marginTop = '14.5px';
    }
</script>
<script src="/javascripts/script.js"></script>
