<style>
        .pagination {
                margin-top: 20px;
                text-align: center;
        }
        .pagination a {
                display: inline-block;
                margin: 0 8px;
                color: #007bff;
                text-decoration: none;
                font-size: 16px;
                font-weight: 600;
                border: 2px solid #007bff;
                padding: 10px 16px;
                border-radius: 8px;
                transition: background-color 0.3s, color 0.3s;
        }
        .pagination a:hover,
        .pagination a:focus {
                background-color: #007bff;
                color: white;
                outline: none;
        }
        .pagination a.disabled {
                color: #6c757d;
                border-color: #6c757d;
                pointer-events: none;
        }
        .pagination .current {
                background-color: #007bff;
                color: white;
                border-color: #007bff;
        }
</style>

<div class="pagination">
        <% if(currentPage > 1) { %>
                <a href="?page=<%= currentPage - 1 %>">Назад</a>
        <% } else { %>
                <a class="disabled">Назад</a>
        <% } %>

        <% for(let i = 1; i <= totalPages; i++) { %>
                <a href="?page=<%= i %>" class="<%= i === currentPage ? 'current' : '' %>"><%= i %></a>
        <% } %>

        <% if(currentPage < totalPages) { %>
                <a href="?page=<%= currentPage + 1 %>">Вперёд</a>
        <% } else { %>
                <a class="disabled">Вперёд</a>
        <% } %>
</div>
