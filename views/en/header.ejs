        border: 1px solid #a7c957;
        background-color: #fff;
    }
    details ul li {
        margin: 10px 0;
    }
    details ul li a {
        text-decoration: none;
        color: #333;
        padding: 8px 12px;
        display: block;
        border-radius: 3px;
        transition: background-color 0.3s ease, color 0.3s ease;
    }
    details ul li a:hover {
        background-color: #ddd;
        color: #000;
    }
    :root{
        --background-color: #1C2025;
        --hover-background-color: #303740;
        --color: #DAE2ED;
        --padding: 8px;
        --border-radius: 8px;
        --title-content-space: 4px;
    }
    .dropdown{
        width: 50px;
        text-align: center;
        position: absolute;
        right: -10%;
        top: -1px;
    }
    .dropdown-title{
        position: relative;
        margin-bottom: var(--title-content-space);
        background: none;
    }
    .dropdown-title::after{
        content: "";
        position: absolute;
        width: 100%;
        height: var(--title-content-space);
        bottom: 0;
        left: 0;
        transform: translateY(100%);
    }
    .dropdown-title, .dropdown-content{
        padding: var(--padding);
        border-radius: var(--border-radius);
        color: var(--color);
        cursor: pointer;
    }

    .dropdown-title:hover + .dropdown-content, .dropdown-content:hover{
        transform: scaleY(1);
    }
    .dropdown-content{
        display: flex;
        flex-direction: column;
        transition: transform 0.35s ease;
        transform-origin: top;
        transform: scaleY(0);
    }
    .dropdown-content a {
        text-decoration: none;
        padding: var(--padding);
        color: var(--color);
        border-radius: var(--border-radius);
    }
</style>

