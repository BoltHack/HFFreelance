<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }
    header{
        width: 100%;
        height: 80px;
        background: rgb(32,30,32);
        background: linear-gradient(184deg, rgba(32,30,32,1) 54%, rgba(16,16,17,1) 76%);
        position: fixed;
        top: 0;
        z-index: 2;
        transition: top 0.3s;
    }
    img {
        width: 60px;
        height: 60px;
        border-radius: 10px;
    }
    .container-logo{
        display: flex;
        padding: 10px;
